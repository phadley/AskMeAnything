<h1>Questions</h1>

<p><%= link_to 'Add a New Question', new_question_url %></p>

<table>
  <thead>
    <tr>
      <th>Q</th>
      <th>People</th>
      <th>User</th>
      <th>Votecount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.q %></td>
      <td><%= question.people_id %></td>
      <td><%= question.user_id %></td>
      <td><%= question.votecount %></td>
  
      <td><%= link_to 'Show', question_url(question) %></td>
      <td><%= link_to 'Edit', edit_question_url(question) %></td>
      <td><%= link_to 'Destroy', question_url(question), method: 'delete', data: { confirm: "Do you really want to delete this question?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

