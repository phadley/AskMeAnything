<h1>New Person</h1>


<%= form_tag(people_url, method: 'post') do %>


  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title %>
  </div>

  <div>
    <%= label_tag :imagelink %><br />
    <%= text_field_tag :imagelink %>
  </div>
  
  <div>
    <%= submit_tag "Create Person" %> <%= link_to "Cancel", '/' %>
  </div>
<% end %>
